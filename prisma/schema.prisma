generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id                      String    @id @default(cuid())
  name                    String?
  username                String?   @unique
  email                   String?   @unique
  emailVerified           DateTime?
  image                   String?
  bio                     String?   @db.Text
  githubUrl               String?
  twitterUrl              String?
  purchasedComponentIds   String[]  @default([])
  role                    Role      @default(USER)

  accounts       Account[]
  sessions       Session[]
  snippets       Snippet[]       @relation("UserSnippets")
  likes          Like[]          @relation("UserLikes")
  comments       Comment[]       @relation("UserComments")
  savedSnippets  SavedSnippet[]  @relation("UserSavedSnippets")
  followers      Follows[]       @relation("Following")
  following      Follows[]       @relation("Followers")
  
  documents      Document[]      @relation("UserDocuments")
  documentLikes  DocumentLike[]  @relation("UserDocumentLikes")
  documentComments DocumentComment[] @relation("UserDocumentComments")
  documentSaves  DocumentSave[]  @relation("UserDocumentSaves")
  
  createdComponents Component[] @relation("ComponentCreator")
  orders            Order[]     @relation("UserOrders")
  reviews           Review[]    @relation("UserReviews")

  bugReports    Bug[]         @relation("BugReporter")
  bugUpvotes    BugUpvote[]   @relation("BugUpvoter")
  bugComments   BugComment[]  @relation("BugCommenter")

  notifications Notification[]

  // Optional for Session schema
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Snippet {
  id          String   @id @default(cuid())
  title       String   @unique
  description String   @db.Text
  language    String
  code        String   @db.Text
  tags        String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  authorId    String
  author      User     @relation("UserSnippets", fields: [authorId], references: [id], onDelete: Cascade)
  
  visibility  String   @default("public") // "public" or "private"
  
  forkedFromId String?
  forkedFrom   Snippet?  @relation("SnippetForks", fields: [forkedFromId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  forks        Snippet[] @relation("SnippetForks")
  
  allowForks   Boolean   @default(true)

  likes       Like[]
  comments    Comment[]
  savedBy     SavedSnippet[]
}

model Like {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  userId     String
  user       User     @relation("UserLikes", fields: [userId], references: [id], onDelete: Cascade)
  snippetId  String
  snippet    Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)

  @@unique([userId, snippetId])
}

model Comment {
  id         String   @id @default(cuid())
  content    String
  createdAt  DateTime @default(now())
  
  authorId   String
  author     User     @relation("UserComments", fields: [authorId], references: [id], onDelete: Cascade)
  
  snippetId  String
  snippet    Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
}

model SavedSnippet {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  userId     String
  user       User     @relation("UserSavedSnippets", fields: [userId], references: [id], onDelete: Cascade)
  snippetId  String
  snippet    Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  
  @@unique([userId, snippetId])
}

model Follows {
  followerId  String
  followingId String
  
  follower    User @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)
  following   User @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)
  
  @@id([followerId, followingId])
}

model Document {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.Text
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  authorId  String
  author    User     @relation("UserDocuments", fields: [authorId], references: [id], onDelete: Cascade)

  likes    DocumentLike[]
  comments DocumentComment[]
  savedBy  DocumentSave[]
}

model DocumentLike {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  userId     String
  user       User     @relation("UserDocumentLikes", fields: [userId], references: [id], onDelete: Cascade)
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([userId, documentId])
}

model DocumentComment {
  id         String   @id @default(cuid())
  content    String
  createdAt  DateTime @default(now())
  
  authorId   String
  author     User     @relation("UserDocumentComments", fields: [authorId], references: [id], onDelete: Cascade)
  
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
}

model DocumentSave {
