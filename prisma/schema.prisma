// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                  String          @id @default(cuid())
  name                String?
  username            String?         @unique
  email               String?         @unique
  emailVerified       DateTime?
  image               String?
  bio                 String?         @db.Text
  githubUrl           String?
  twitterUrl          String?
  accounts            Account[]
  sessions            Session[]
  snippets            Snippet[]
  likes               Like[]
  comments            Comment[]
  savedSnippets       SavedSnippet[]
  documents           Document[]
  documentLikes       DocumentLike[]
  documentComments    DocumentComment[]
  documentSaves       DocumentSave[]
  notifications       Notification[]
  followers           Follows[]       @relation("following")
  following           Follows[]       @relation("follower")
  bugReports          Bug[]
  bugUpvotes          BugUpvote[]
  createdComponents   Component[]
  orders              Order[]
  reviews             Review[]
  purchasedComponentIds String[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Snippet {
  id          String         @id @default(cuid())
  title       String
  description String
  language    String
  code        String
  tags        String[]
  author      User           @relation(fields: [authorId], references: [id])
  authorId    String
  likes       Like[]
  comments    Comment[]
  savedBy     SavedSnippet[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model Like {
  id        String   @id @default(cuid())
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  snippetId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@unique([snippetId, userId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  snippetId String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SavedSnippet {
  id        String   @id @default(cuid())
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  snippetId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@unique([snippetId, userId])
}

model Document {
  id        String            @id @default(cuid())
  title     String
  slug      String            @unique
  content   String
  tags      String[]
  author    User              @relation(fields: [authorId], references: [id])
  authorId  String
  likes     DocumentLike[]
  comments  DocumentComment[]
  savedBy   DocumentSave[]
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}

model DocumentLike {
  id         String   @id @default(cuid())
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  documentId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  createdAt  DateTime @default(now())

  @@unique([documentId, userId])
}

model DocumentComment {
  id         String   @id @default(cuid())
  content    String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  documentId String
  author     User     @relation(fields: [authorId], references: [id])
  authorId   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model DocumentSave {
  id         String   @id @default(cuid())
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  documentId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  createdAt  DateTime @default(now())

  @@unique([documentId, userId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String // e.g., LIKE, COMMENT, FOLLOW
  message   String
  link      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Follows {
  follower   User     @relation("follower", fields: [followerId], references: [id])
  followerId String
  following  User     @relation("following", fields: [followingId], references: [id])
  followingId String
  createdAt  DateTime @default(now())

  @@id([followerId, followingId])
}

model Bug {
  id          String      @id @default(cuid())
  title       String
  description String
  status      String // OPEN, IN_PROGRESS, CLOSED
  reporter    User        @relation(fields: [reporterId], references: [id])
  reporterId  String
  upvotes     BugUpvote[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model BugUpvote {
  id        String   @id @default(cuid())
  bug       Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)
  bugId     String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@unique([bugId, userId])
}

model Component {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float    @default(0)
  tags        String[]
  previewUrls String[]
  zipFileUrl  String
  status      String   @default("pending") // pending, approved, rejected
  creator     User     @relation(fields: [creatorId], references: [id])
  creatorId   String
  orders      Order[]
  reviews     Review[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id          String    @id @default(cuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  component   Component @relation(fields: [componentId], references: [id])
  componentId String
  amount      Float
  status      String    @default("completed")
  createdAt   DateTime  @default(now())
}

model Review {
  id          String    @id @default(cuid())
  rating      Int
  text        String?
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)
  componentId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, componentId])
}
