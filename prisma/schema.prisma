// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                    String          @id @default(cuid())
  name                  String?
  username              String?         @unique
  email                 String?         @unique
  emailVerified         DateTime?
  image                 String?
  bio                   String?
  githubUrl             String?
  twitterUrl            String?
  role                  Role            @default(USER)
  isBlocked             Boolean         @default(false)
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt
  accounts              Account[]
  sessions              Session[]
  snippets              Snippet[]
  likes                 Like[]
  comments              Comment[]
  savedSnippets         SavedSnippet[]
  documents             Document[]
  documentLikes         DocumentLike[]
  documentComments      DocumentComment[]
  documentSaves         DocumentSave[]
  followers             Follows[]       @relation("Following")
  following             Follows[]       @relation("Followers")
  notifications         Notification[]
  createdComponents     Component[]     @relation("CreatedComponents")
  orders                Order[]
  reviews               Review[]
  purchasedComponentIds String[]
  bugReports            Bug[]
  bugUpvotes            BugUpvote[]
  bugComments           BugComment[]
}

model Snippet {
  id           String         @id @default(cuid())
  title        String
  description  String
  language     String
  code         String
  usage        String?
  tags         String[]
  visibility   String         @default("public")
  allowForks   Boolean        @default(true)
  authorId     String
  author       User           @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  likes        Like[]
  comments     Comment[]
  savedBy      SavedSnippet[]
  forkedFromId String?
  forkedFrom   Snippet?       @relation("Fork", fields: [forkedFromId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  forks        Snippet[]      @relation("Fork")

  @@index([authorId])
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  snippetId String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, snippetId])
  @@index([snippetId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  snippetId String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([snippetId])
  @@index([authorId])
}

model SavedSnippet {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  snippetId String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, snippetId])
  @@index([snippetId])
}

model Document {
  id        String           @id @default(cuid())
  title     String
  slug      String           @unique
  content   String
  tags      String[]
  authorId  String
  author    User             @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  likes     DocumentLike[]
  comments  DocumentComment[]
  savedBy   DocumentSave[]

  @@index([authorId])
}

model DocumentLike {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([userId, documentId])
  @@index([documentId])
}

model DocumentComment {
  id         String   @id @default(cuid())
  content    String
  authorId   String
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@index([documentId])
}

model DocumentSave {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([userId, documentId])
  @@index([documentId])
}

model Follows {
  followerId  String
  followingId String
  follower    User   @relation("Followers", fields: [followerId], references: [id])
  following   User   @relation("Following", fields: [followingId], references: [id])

  @@id([followerId, followingId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String // e.g., 'LIKE', 'COMMENT', 'FOLLOW', 'MENTION'
  message   String
  link      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
}

model Component {
  id              String    @id @default(cuid())
  title           String    @unique
  description     String
  price           Int // in INR
  tags            String[]
  previewUrls     String[]
  zipFileUrl      String
  livePreviewUrl  String?
  status          String    @default("pending") // pending, approved, rejected
  creatorId       String
  creator         User      @relation("CreatedComponents", fields: [creatorId], references: [id], onDelete: Cascade)
  orders          Order[]
  reviews         Review[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([creatorId])
}

model Order {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  componentId String
  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)
  amount      Int
  status      String // e.g., created, completed, failed
  createdAt   DateTime  @default(now())

  @@index([userId])
  @@index([componentId])
}

model Review {
  id          String    @id @default(cuid())
  rating      Int
  text        String?
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  componentId String
  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, componentId])
  @@index([componentId])
}

model Bug {
  id          String       @id @default(cuid())
  title       String
  description String
  status      String // OPEN, IN_PROGRESS, CLOSED
  reporterId  String
  reporter    User         @relation(fields: [reporterId], references: [id], onDelete: Cascade)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  upvotes     BugUpvote[]
  comments    BugComment[]

  @@index([reporterId])
}

model BugUpvote {
  id      String   @id @default(cuid())
  bugId   String
  bug     Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)
  userId  String
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([bugId, userId])
}

model BugComment {
  id        String   @id @default(cuid())
  content   String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  bugId     String
  bug       Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([bugId])
}

enum Role {
  USER
  ADMIN
}
