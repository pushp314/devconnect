// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String    @id @default(cuid())
  name                  String?
  username              String?   @unique
  email                 String?   @unique
  emailVerified         DateTime?
  image                 String?
  bio                   String?   @db.Text
  githubUrl             String?
  twitterUrl            String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  purchasedComponentIds String[]
  accounts              Account[]
  sessions              Session[]

  // Snippet related
  snippets      Snippet[]
  likes         Like[]
  comments      Comment[]
  savedSnippets SavedSnippet[]

  // Document related
  documents        Document[]
  documentLikes    DocumentLike[]
  documentComments DocumentComment[]
  documentSaves    DocumentSave[]

  // Notification related
  notifications Notification[]

  // Follows
  followers Follows[] @relation("Followers")
  following Follows[] @relation("Following")

  // Bug reports
  bugReports Bug[]
  bugUpvotes BugUpvote[]

  // Marketplace
  createdComponents Component[]
  orders            Order[]
  reviews           Review[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Snippet {
  id          String    @id @default(cuid())
  title       String
  description String    @db.Text
  language    String
  code        String    @db.Text
  tags        String[]
  createdAt   DateTime  @default(now())
  authorId    String
  author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  likes       Like[]
  comments    Comment[]
  savedBy     SavedSnippet[]
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  snippetId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)

  @@unique([userId, snippetId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  authorId  String
  snippetId String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
}

model SavedSnippet {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  snippetId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)

  @@unique([userId, snippetId])
}

model Document {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.Text
  tags      String[]
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  likes    DocumentLike[]
  comments DocumentComment[]
  savedBy  DocumentSave[]
}

model DocumentLike {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  userId     String
  documentId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([userId, documentId])
}

model DocumentComment {
  id         String   @id @default(cuid())
  content    String
  createdAt  DateTime @default(now())
  authorId   String
  documentId String
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
}

model DocumentSave {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  userId     String
  documentId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([userId, documentId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String // e.g., 'LIKE', 'COMMENT', 'FOLLOW'
  message   String
  link      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Follows {
  followerId  String
  followingId String
  follower    User   @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)
  following   User   @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@id([followerId, followingId])
}

model Bug {
  id          String     @id @default(cuid())
  title       String
  description String
  status      String     @default("OPEN") // OPEN, IN_PROGRESS, CLOSED
  createdAt   DateTime   @default(now())
  reporterId  String
  reporter    User       @relation(fields: [reporterId], references: [id], onDelete: Cascade)
  upvotes     BugUpvote[]
}

model BugUpvote {
  id     String @id @default(cuid())
  bugId  String
  userId String
  bug    Bug    @relation(fields: [bugId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([bugId, userId])
}

enum ComponentStatus {
  pending
  approved
  rejected
}

model Component {
  id            String   @id @default(cuid())
  title         String
  description   String   @db.Text
  price         Float
  tags          String[]
  previewUrls   String[]
  zipFileUrl    String
  createdAt     DateTime @default(now())
  creatorId     String
  creator       User     @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  status        String   @default("pending") // pending, approved, rejected
  orders        Order[]
  reviews       Review[]

  @@index([creatorId])
}

model Order {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  componentId String
  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)
  amount      Float
  status      String // e.g., 'pending', 'completed', 'failed'
  createdAt   DateTime  @default(now())

  @@index([userId])
  @@index([componentId])
}

model Review {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  componentId String
  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)
  rating      Int
  text        String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, componentId])
  @@index([componentId])
}
