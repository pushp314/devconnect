// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id                    String            @id @default(cuid())
  name                  String?
  username              String?           @unique
  email                 String?           @unique
  emailVerified         DateTime?
  image                 String?
  bio                   String?           @db.Text
  githubUrl             String?
  twitterUrl            String?
  accounts              Account[]
  sessions              Session[]
  snippets              Snippet[]
  comments              Comment[]
  likes                 Like[]
  savedSnippets         SavedSnippet[]
  documents             Document[]
  documentLikes         DocumentLike[]
  documentComments      DocumentComment[]
  documentSaves         DocumentSave[]
  followers             Follows[]         @relation("Followers")
  following             Follows[]         @relation("Following")
  purchasedComponentIds String[]          @default([])
  createdComponents     Component[]       @relation("CreatedComponents")
  orders                Order[]
  reviews               Review[]
  bugReports            Bug[]             @relation("ReportedBugs")
  bugUpvotes            BugUpvote[]
  bugComments           BugComment[]
  notifications         Notification[]
  purchasedComponents   Component[]       @relation("PurchasedComponents")
}

model Snippet {
  id           String         @id @default(cuid())
  title        String
  description  String         @db.Text
  language     String
  code         String         @db.Text
  tags         String[]
  visibility   String         @default("public") // "public" or "private"
  allowForks   Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  author       User           @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId     String
  likes        Like[]
  comments     Comment[]
  savedBy      SavedSnippet[]
  forkedFromId String?
  forkedFrom   Snippet?       @relation("Fork", fields: [forkedFromId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  forks        Snippet[]      @relation("Fork")
  isExecutable Boolean        @default(false)
  previewEngine String?
}

model Document {
  id        String           @id @default(cuid())
  title     String
  slug      String           @unique
  content   String           @db.Text
  tags      String[]
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  authorId  String
  author    User             @relation(fields: [authorId], references: [id], onDelete: Cascade)
  likes     DocumentLike[]
  comments  DocumentComment[]
  savedBy   DocumentSave[]
}

model Component {
  id           String    @id @default(cuid())
  title        String
  description  String
  price        Float
  tags         String[]
  previewUrls  String[]
  zipFileUrl   String
  status       String    @default("pending") // pending, approved, rejected
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  creatorId    String
  creator      User      @relation("CreatedComponents", fields: [creatorId], references: [id], onDelete: Cascade)
  orders       Order[]
  reviews      Review[]
  purchasedBy  User[]    @relation("PurchasedComponents")
}

model Order {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  componentId String
  component   Component @relation(fields: [componentId], references: [id])
  amount      Float
  status      String   @default("completed")
  createdAt   DateTime @default(now())
}

model Review {
  id          String   @id @default(cuid())
  rating      Int
  text        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  componentId String
  component   Component @relation(fields: [componentId], references: [id])

  @@unique([userId, componentId])
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  snippetId String
  userId    String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([snippetId, userId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  snippetId String
  authorId  String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model SavedSnippet {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  snippetId String
  userId    String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([snippetId, userId])
}

model DocumentLike {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  documentId String
  userId     String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([documentId, userId])
}

model DocumentComment {
  id         String   @id @default(cuid())
  content    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  documentId String
  authorId   String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model DocumentSave {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  documentId String
  userId     String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([documentId, userId])
}

model Follows {
  followerId  String
  followingId String
  follower    User   @relation("Following", fields: [followerId], references: [id])
  following   User   @relation("Followers", fields: [followingId], references: [id])

  @@id([followerId, followingId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String // e.g., 'LIKE', 'COMMENT', 'FOLLOW', 'MENTION'
  message   String
  link      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Bug {
  id          String       @id @default(cuid())
  title       String
  description String
  status      String       @default("OPEN")
  createdAt   DateTime     @default(now())
  reporterId  String
  reporter    User         @relation("ReportedBugs", fields: [reporterId], references: [id])
  upvotes     BugUpvote[]
  comments    BugComment[]
}

model BugUpvote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  bugId     String
  userId    String
  bug       Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([bugId, userId])
}

model BugComment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  authorId  String
  bugId     String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  bug       Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)
}
