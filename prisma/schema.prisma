// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String            @id @default(cuid())
  name                    String?
  email                   String?           @unique
  emailVerified           DateTime?
  username                String?           @unique
  image                   String?
  bio                     String?           @db.Text
  githubUrl               String?
  twitterUrl              String?
  createdAt               DateTime          @default(now())
  updatedAt               DateTime          @updatedAt
  accounts                Account[]
  sessions                Session[]
  snippets                Snippet[]
  documents               Document[]
  followers               Follows[]         @relation("followers")
  following               Follows[]         @relation("following")
  likes                   Like[]
  savedSnippets           SavedSnippet[]
  comments                Comment[]
  documentLikes           DocumentLike[]
  documentSaves           DocumentSave[]
  documentComments        DocumentComment[]
  bugsReported            Bug[]
  bugUpvotes              BugUpvote[]
  bugComments             BugComment[]
  notifications           Notification[]
  purchasedComponentIds   String[]          @default([])
  createdComponents       Component[]       @relation("CreatedComponents")
  orders                  Order[]
  reviews                 Review[]
}

model Follows {
  follower    User     @relation("followers", fields: [followerId], references: [id])
  followerId  String
  following   User     @relation("following", fields: [followingId], references: [id])
  followingId String
  createdAt   DateTime @default(now())

  @@id([followerId, followingId])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Snippet {
  id          String   @id @default(cuid())
  title       String
  description String
  language    String
  code        String   @db.Text
  tags        String[]
  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  visibility  String  @default("public") // "public" or "private"
  allowForks  Boolean @default(true)
  forkedFromId String?
  forkedFrom  Snippet? @relation("Forks", fields: [forkedFromId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  forks       Snippet[] @relation("Forks")

  likes     Like[]
  comments  Comment[]
  savedBy   SavedSnippet[]
}

model Like {
  id        String   @id @default(cuid())
  snippetId String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([snippetId, userId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  snippetId String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model SavedSnippet {
  id        String   @id @default(cuid())
  snippetId String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([snippetId, userId])
}

model Document {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.Text
  tags      String[]
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  likes     DocumentLike[]
  comments  DocumentComment[]
  savedBy   DocumentSave[]
}

model DocumentLike {
  id         String   @id @default(cuid())
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([documentId, userId])
}

model DocumentComment {
  id         String   @id @default(cuid())
  content    String
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  authorId   String
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}

model DocumentSave {
  id         String   @id @default(cuid())
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([documentId, userId])
}

model Bug {
  id          String       @id @default(cuid())
  title       String
  description String       @db.Text
  status      String // e.g., "OPEN", "IN_PROGRESS", "CLOSED"
  reporterId  String
  reporter    User         @relation(fields: [reporterId], references: [id], onDelete: Cascade)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  upvotes     BugUpvote[]
  comments    BugComment[]
}

model BugUpvote {
  id        String   @id @default(cuid())
  bugId     String
  bug       Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([bugId, userId])
}

model BugComment {
  id        String   @id @default(cuid())
  content   String
  bugId     String
  bug       Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}


model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String // e.g., 'LIKE', 'COMMENT', 'FOLLOW', 'MENTION'
  message   String
  link      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

// Marketplace Models
model Component {
  id            String    @id @default(cuid())
  title         String
  description   String    @db.Text
  price         Float
  tags          String[]
  previewUrls   String[]
  zipFileUrl    String
  status        String    @default("pending") // "pending", "approved", "rejected"
  creatorId     String
  creator       User      @relation("CreatedComponents", fields: [creatorId], references: [id], onDelete: Cascade)
  orders        Order[]
  reviews       Review[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Order {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  componentId String
  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)
  amount      Float
  status      String    // "pending", "completed", "failed"
  createdAt   DateTime  @default(now())
}

model Review {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  componentId String
  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)
  rating      Int
  text        String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, componentId])
}
