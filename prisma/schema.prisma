// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id                    String    @id @default(cuid())
  name                  String?
  username              String?   @unique
  email                 String?   @unique
  emailVerified         DateTime?
  image                 String?
  bio                   String?   @db.Text
  githubUrl             String?
  twitterUrl            String?
  accounts              Account[]
  sessions              Session[]
  snippets              Snippet[]
  likes                 Like[]
  comments              Comment[]
  savedSnippets         SavedSnippet[]
  documents             Document[]
  documentLikes         DocumentLike[]
  documentComments      DocumentComment[]
  documentSaves         DocumentSave[]
  followers             Follows[]        @relation("Following")
  following             Follows[]        @relation("Followers")
  bugReports            Bug[]            @relation("ReportedBugs")
  bugUpvotes            BugUpvote[]
  bugComments           BugComment[]
  notifications         Notification[]
  createdComponents     Component[]      @relation("CreatedComponents")
  purchasedComponentIds String[]
  orders                Order[]
  reviews               Review[]
}

model Follows {
  followerId  String
  followingId String
  follower    User   @relation("Followers", fields: [followerId], references: [id])
  following   User   @relation("Following", fields: [followingId], references: [id])

  @@id([followerId, followingId])
}

model Snippet {
  id          String    @id @default(cuid())
  title       String
  description String    @db.Text
  language    String
  code        String    @db.Text
  tags        String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  authorId    String
  author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  likes       Like[]
  comments    Comment[]
  savedBy     SavedSnippet[]
  visibility  String    @default("public") // "public" or "private"
  forkedFromId String?
  forkedFrom   Snippet?  @relation("Forks", fields: [forkedFromId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  forks        Snippet[] @relation("Forks")
  allowForks   Boolean   @default(true)

  @@index([authorId])
  @@index([forkedFromId])
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  snippetId String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)

  @@unique([userId, snippetId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  snippetId String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([snippetId])
}

model SavedSnippet {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  snippetId String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)

  @@unique([userId, snippetId])
}

model Document {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.Text
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  likes     DocumentLike[]
  comments  DocumentComment[]
  savedBy   DocumentSave[]

  @@index([authorId])
}

model DocumentLike {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([userId, documentId])
}

model DocumentComment {
  id         String   @id @default(cuid())
  content    String
  createdAt  DateTime @default(now())
  authorId   String
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([documentId])
}

model DocumentSave {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([userId, documentId])
}

model Notification {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String // e.g., 'LIKE', 'COMMENT', 'FOLLOW', 'MENTION'
  message   String
  link      String
  read      Boolean   @default(false)
  createdAt DateTime  @default(now())

  @@index([userId])
}

model Bug {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  status      String   @default("OPEN") // OPEN, IN_PROGRESS, CLOSED
  createdAt   DateTime @default(now())
  reporterId  String
  reporter    User     @relation("ReportedBugs", fields: [reporterId], references: [id])
  upvotes     BugUpvote[]
  comments    BugComment[]

  @@index([reporterId])
}

model BugUpvote {
  id     String @id @default(cuid())
  bugId  String
  bug    Bug    @relation(fields: [bugId], references: [id], onDelete: Cascade)
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([bugId, userId])
}

model BugComment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  bugId     String
  bug       Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([bugId])
}

model Component {
  id           String    @id @default(cuid())
  title        String
  description  String    @db.Text
  price        Float     @default(0)
  tags         String[]
  previewUrls  String[]
  zipFileUrl   String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  status       String    @default("pending") // pending, approved, rejected
  creatorId    String
  creator      User      @relation("CreatedComponents", fields: [creatorId], references: [id], onDelete: Cascade)
  orders       Order[]
  reviews      Review[]

  @@index([creatorId])
}

model Order {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  componentId String
  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)
  amount      Float
  status      String // e.g., 'completed', 'pending', 'failed'
  createdAt   DateTime  @default(now())

  @@index([userId])
  @@index([componentId])
}

model Review {
  id          String    @id @default(cuid())
  rating      Int
  text        String?   @db.Text
  createdAt   DateTime  @default(now())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  componentId String
  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)

  @@unique([userId, componentId])
  @@index([componentId])
}
