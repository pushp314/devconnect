// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // uncomment for Prisma CockroachDB
  // relationMode = "prisma"
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  username      String?         @unique
  bio           String?
  githubUrl     String?
  twitterUrl    String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  accounts      Account[]
  sessions      Session[]
  snippets      Snippet[]
  documents     Document[]
  likes         Like[]
  comments      Comment[]
  documentLikes DocumentLike[]
  documentComments DocumentComment[]
  savedSnippets SavedSnippet[]
  savedDocuments DocumentSave[]
  followers     Follows[]       @relation("Following")
  following     Follows[]       @relation("Follower")
  notifications Notification[]
  bugReports    Bug[]
  bugUpvotes    BugUpvote[]
  bugComments   BugComment[]
  components    Component[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Snippet {
  id          String    @id @default(cuid())
  title       String
  description String
  code        String
  language    String
  tags        String[]
  author      User      @relation(fields: [authorId], references: [id])
  authorId    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  likes       Like[]
  comments    Comment[]
  savedBy     SavedSnippet[]

  @@map("snippets")
}

model Document {
    id        String   @id @default(cuid())
    title     String
    slug      String   @unique
    content   String
    tags      String[]
    author    User     @relation(fields: [authorId], references: [id])
    authorId  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    likes     DocumentLike[]
    comments  DocumentComment[]
    savedBy   DocumentSave[]

    @@map("documents")
}

model Like {
  id        String   @id @default(cuid())
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  snippetId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@unique([snippetId, userId])
  @@map("likes")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  snippetId String
  author    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@map("comments")
}

model DocumentLike {
    id          String   @id @default(cuid())
    document    Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
    documentId  String
    user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId      String
    createdAt   DateTime @default(now())

    @@unique([documentId, userId])
    @@map("document_likes")
}

model DocumentComment {
    id          String   @id @default(cuid())
    content     String
    document    Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
    documentId  String
    author      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId      String
    createdAt   DateTime @default(now())

    @@map("document_comments")
}


model SavedSnippet {
  id        String   @id @default(cuid())
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  snippetId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@unique([snippetId, userId])
  @@map("saved_snippets")
}

model DocumentSave {
    id          String   @id @default(cuid())
    document    Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
    documentId  String
    user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId      String
    createdAt   DateTime @default(now())
    
    @@unique([documentId, userId])
    @@map("saved_documents")
}


model Follows {
  followerId  String
  followingId String
  follower    User   @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  following   User   @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@id([followerId, followingId])
  @@map("follows")
}


model Notification {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  type      String // e.g., LIKE, COMMENT, FOLLOW
  message   String
  link      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("notifications")
}

model Bug {
    id          String       @id @default(cuid())
    title       String
    description String
    status      String       @default("OPEN") // OPEN, IN_PROGRESS, CLOSED
    reporter    User         @relation(fields: [reporterId], references: [id])
    reporterId  String
    createdAt   DateTime     @default(now())
    upvotes     BugUpvote[]
    comments    BugComment[]

    @@map("bugs")
}

model BugUpvote {
    id      String   @id @default(cuid())
    bug     Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)
    bugId   String
    user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId  String
    createdAt DateTime @default(now())
    
    @@unique([bugId, userId])
    @@map("bug_upvotes")
}

model BugComment {
    id        String   @id @default(cuid())
    content   String
    bug       Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)
    bugId     String
    author    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId    String
    createdAt DateTime @default(now())

    @@map("bug_comments")
}

model Component {
    id          String   @id @default(cuid())
    name        String
    description String
    code        String
    tags        String[]
    likes       Int      @default(0)
    author      User     @relation(fields: [authorId], references: [id])
    authorId    String
    createdAt   DateTime @default(now())

    @@map("components")
}
