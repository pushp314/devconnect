
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  ADMIN
}

model User {
  id                      String    @id @default(cuid())
  name                    String?
  email                   String?   @unique
  emailVerified           DateTime?
  image                   String?
  username                String?   @unique
  bio                     String?
  role                    Role      @default(USER)
  isBlocked               Boolean   @default(false)
  githubUrl               String?
  twitterUrl              String?
  purchasedComponentIds   String[]  @default([])
  accounts                Account[]
  sessions                Session[]
  snippets                Snippet[]
  documents               Document[]
  likes                   Like[]
  comments                Comment[]
  savedSnippets           SavedSnippet[]
  documentLikes           DocumentLike[]
  documentComments        DocumentComment[]
  documentSaves           DocumentSave[]
  followers               Follows[]         @relation("FollowsTarget")
  following               Follows[]         @relation("FollowsInitiator")
  notifications           Notification[]
  bugReports              Bug[]             @relation("Reporter")
  bugUpvotes              BugUpvote[]
  bugComments             BugComment[]
  createdComponents       Component[]       @relation("Creator")
  orders                  Order[]
  reviews                 Review[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Snippet {
  id           String         @id @default(cuid())
  title        String
  description  String
  language     String
  code         String         @db.Text
  tags         String[]
  visibility   String         @default("public") // public, private
  allowForks   Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  author       User           @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId     String
  likes        Like[]
  comments     Comment[]
  savedBy      SavedSnippet[]
  forkedFromId String?
  forkedFrom   Snippet?       @relation("Fork", fields: [forkedFromId], references: [id], onDelete:NoAction, onUpdate:NoAction)
  forks        Snippet[]      @relation("Fork")

  @@index([authorId])
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  snippetId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  @@unique([snippetId, userId])
  @@index([snippetId])
  @@index([userId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  snippetId String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String

  @@index([snippetId])
  @@index([authorId])
}

model SavedSnippet {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  snippetId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  @@unique([snippetId, userId])
  @@index([userId])
}

model Document {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.Text
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String

  likes     DocumentLike[]
  comments  DocumentComment[]
  savedBy   DocumentSave[]

  @@index([authorId])
}

model DocumentLike {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  documentId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String

  @@unique([documentId, userId])
  @@index([documentId])
  @@index([userId])
}

model DocumentComment {
  id         String   @id @default(cuid())
  content    String
  createdAt  DateTime @default(now())
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  documentId String
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId   String

  @@index([documentId])
  @@index([authorId])
}

model DocumentSave {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  documentId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String

  @@unique([documentId, userId])
  @@index([userId])
}

model Follows {
  followerId  String
  followingId String
  follower    User   @relation("FollowsInitiator", fields: [followerId], references: [id], onDelete: Cascade)
  following   User   @relation("FollowsTarget", fields: [followingId], references: [id], onDelete: Cascade)

  @@id([followerId, followingId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String // LIKE, COMMENT, FOLLOW, MENTION
  message   String
  link      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
}

model Bug {
  id          String       @id @default(cuid())
  title       String
  description String
  status      String // OPEN, IN_PROGRESS, CLOSED
  createdAt   DateTime     @default(now())
  reporterId  String
  reporter    User         @relation("Reporter", fields: [reporterId], references: [id], onDelete: Cascade)
  upvotes     BugUpvote[]
  comments    BugComment[]

  @@index([reporterId])
}

model BugUpvote {
  id     String @id @default(cuid())
  bugId  String
  bug    Bug    @relation(fields: [bugId], references: [id], onDelete: Cascade)
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([bugId, userId])
}

model BugComment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  bugId     String
  bug       Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([bugId])
}

model Component {
  id             String    @id @default(cuid())
  title          String    @unique
  description    String
  price          Int // in smallest currency unit (e.g., paisa for INR)
  tags           String[]
  previewUrls    String[]
  zipFileUrl     String
  livePreviewUrl String?
  status         String    @default("pending") // pending, approved, rejected
  createdAt      DateTime  @default(now())
  creatorId      String
  creator        User      @relation("Creator", fields: [creatorId], references: [id])
  orders         Order[]
  reviews        Review[]

  @@index([creatorId])
}

model Order {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  componentId String
  component   Component @relation(fields: [componentId], references: [id])
  amount      Int // price at time of purchase
  status      String // completed, failed
  createdAt   DateTime  @default(now())

  @@index([userId])
  @@index([componentId])
}

model Review {
  id          String    @id @default(cuid())
  rating      Int
  text        String?
  createdAt   DateTime  @default(now())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  componentId String
  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)

  @@unique([userId, componentId])
  @@index([componentId])
}
