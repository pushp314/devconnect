
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id                    String            @id @default(cuid())
  name                  String?
  username              String?           @unique
  email                 String?           @unique
  emailVerified         DateTime?
  image                 String?
  bio                   String?
  githubUrl             String?
  twitterUrl            String?
  accounts              Account[]
  sessions              Session[]
  snippets              Snippet[]
  documents             Document[]
  comments              Comment[]
  likes                 Like[]
  savedSnippets         SavedSnippet[]
  documentSaves         DocumentSave[]
  documentLikes         DocumentLike[]
  documentComments      DocumentComment[]
  followers             Follows[]         @relation("Followers")
  following             Follows[]         @relation("Following")
  bugReports            Bug[]             @relation("ReportedBugs")
  bugUpvotes            BugUpvote[]
  bugComments           BugComment[]
ax
  notifications         Notification[]
  createdComponents     Component[]       @relation("CreatedComponents")
  purchasedComponentIds String[]
  orders                Order[]
  reviews               Review[]
}

model Snippet {
  id           String    @id @default(cuid())
  title        String
  description  String
  language     String
  code         String    @db.Text
  tags         String[]
  visibility   String    @default("public") // "public", "private"
  allowForks   Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  authorId     String
  author       User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  forkedFromId String?
  forkedFrom   Snippet?  @relation("Fork", fields: [forkedFromId], references: [id], onDelete: SetNull, onUpdate: NoAction)
  forks        Snippet[] @relation("Fork")
  comments     Comment[]
  likes        Like[]
  savedBy      SavedSnippet[]

  @@index([authorId])
  @@index([forkedFromId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  snippetId String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([snippetId])
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  snippetId String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)

  @@unique([userId, snippetId])
  @@index([userId])
  @@index([snippetId])
}

model SavedSnippet {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  snippetId String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)

  @@unique([userId, snippetId])
  @@index([userId])
  @@index([snippetId])
}

model Document {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.Text
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  comments DocumentComment[]
  likes    DocumentLike[]
  savedBy  DocumentSave[]

  @@index([authorId])
}

model DocumentComment {
  id         String   @id @default(cuid())
  content    String
  createdAt  DateTime @default(now())
  authorId   String
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([documentId])
}

model DocumentLike {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([userId, documentId])
  @@index([userId])
  @@index([documentId])
}

model DocumentSave {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([userId, documentId])
  @@index([userId])
  @@index([documentId])
}

model Follows {
  followerId  String
  followingId String
  follower    User   @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)
  following   User   @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@id([followerId, followingId])
}

model Bug {
  id          String       @id @default(cuid())
  title       String
  description String
  status      String       @default("OPEN") // OPEN, IN_PROGRESS, CLOSED
  createdAt   DateTime     @default(now())
  reporterId  String
  reporter    User         @relation("ReportedBugs", fields: [reporterId], references: [id], onDelete: Cascade)
  upvotes     BugUpvote[]
  comments    BugComment[]

  @@index([reporterId])
}

model BugUpvote {
  id     String @id @default(cuid())
  bugId  String
  userId String
  bug    Bug    @relation(fields: [bugId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([bugId, userId])
}

model BugComment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  bugId     String
  bug       Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([bugId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String // FOLLOW, LIKE, COMMENT, MENTION
  message   String
  link      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
}

model Component {
  id            String   @id @default(cuid())
  title         String
  description   String
  price         Float
  tags          String[]
  previewUrls   String[]
  zipFileUrl    String
  creatorId     String
  creator       User     @relation("CreatedComponents", fields: [creatorId], references: [id], onDelete: Cascade)
  orders        Order[]
  reviews       Review[]
  status        String   @default("pending") // pending, approved, rejected
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([creatorId])
}

model Order {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  componentId String
  component   Component @relation(fields: [componentId], references: [id])
  amount      Float
  status      String
  createdAt   DateTime  @default(now())

  @@index([userId])
  @@index([componentId])
}

model Review {
  id          String    @id @default(cuid())
  rating      Int
  text        String?
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  componentId String
  component   Component @relation(fields: [componentId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, componentId])
  @@index([userId])
  @@index([componentId])
}
